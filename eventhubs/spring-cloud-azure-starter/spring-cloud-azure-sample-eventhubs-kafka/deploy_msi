# https://docs.microsoft.com/en-us/azure/spring-cloud/quickstart-deploy-apps?tabs=Azure-CLI&pivots=programming-language-java


az configure --defaults group=rg-servicebusapp-bwmkg spring-cloud=asc-sn-gzh-service

az extension update --name spring-cloud
# create spring-cloud 5 minutes
az spring-cloud create -n asc-sn-gzh-service -g rg-servicebusapp-bwmkg
# create spring-cloud app
az spring-cloud app create -n asc-sn-gzh-app-ehkafka -s asc-sn-gzh-service -g rg-servicebusapp-bwmkg --assign-identity
# az spring-cloud app create -n asc-sn-gzh-app-ehkafka-key -s asc-sn-gzh-service -g rg-servicebusapp-bwmkg --assign-identity
az spring-cloud app identity assign -n asc-sn-gzh-app-ehkafka -s asc-sn-gzh-service -g rg-servicebusapp-bwmkg
# show identity info
az spring-cloud app identity show -n asc-sn-gzh-app-ehkafka -s asc-sn-gzh-service -g rg-servicebusapp-bwmkg

"principalId": "4809801e-1637-4e15-a81f-b0230e63249d",


## ENV
AZURE_STORAGE_ACCOUNT=stblobjiqqk STORAGE_CONTAINER_NAME=blobcontainer

az role assignment create --assignee "f1c01d8b-a2bb-4a9c-92d7-ff65abd65827" \
--role "Storage Blob Data Contributor" \
--resource-group


# deploy
 az spring-cloud app deploy --env AZURE_STORAGE_ACCOUNT=stblobjiqqk STORAGE_CONTAINER_NAME=blobcontainer \
 --name asc-sn-gzh-app-ehkafka \
 --artifact-path ./target/spring-cloud-azure-sample-eventhubs-kafka-1.0.0.jar \
 --jvm-options="-Xms1024m -Xmx1024m"


# log
az spring-cloud app logs --name asc-sn-gzh-app-ehkafka \
                         --resource-group rg-servicebusapp-bwmkg \
                         --service asc-sn-gzh-service \
                         --follow

